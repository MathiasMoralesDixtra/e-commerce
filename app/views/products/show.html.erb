<div class="container mt-3">
    <div class="row">
        <div class="col-7">
            <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0"
                        class="active" aria-current="true" aria-label="Slide 1"></button>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"
                        aria-label="Slide 2"></button>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"
                        aria-label="Slide 3"></button>
                </div>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <%if @product.image.attached? %>
                            <%=image_tag @product.image, class:"d-block w-100" %>
                                <%else%>
                                    <img src="https://cdn.pixabay.com/photo/2016/11/19/18/06/feet-1840619_1280.jpg"
                                        alt="..."  class="d-block w-100">
                                <%end%>
                    </div>
                    <div class="carousel-item">
                        <img src="https://cdn.pixabay.com/photo/2016/11/19/18/06/feet-1840619_1280.jpg"
                            class="d-block w-100 " alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="https://cdn.pixabay.com/photo/2016/11/19/18/06/feet-1840619_1280.jpg"
                            class="d-block w-100 " alt="...">
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"
                    data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"
                    data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
        <div class="col">
            <h1 class="display-3 font-weight-bold">
                <%=@product.name %>
            </h1>
            <p class="h4 fw-normal text-muted">
                <%= @product.description %>
            </p>
            <% if(@product.sale_price) %>
                <p class="h2 text-decoration-line-through fw-normal">Precio Original: $<%= @product.price %> </span>
                        <p class="h2 fw-normal">Oferta: <span class="text-danger">$<%= @product.sale_price %></span>
                            <%else %>
                                <p class="h2 fw-normal">Precio: $<%= @product.price %> </span>
                                        <%end %>
                                            <p class="h2 fw-normal">Stock: <%= @product.quantity %>
                                            </p>
                                            <form>
                                                <div class="mb-3">
                                                    <label class="form-label">Cantidad:</label>
                                                    <input type="number" class="form-control" placeholder="1">
                                                </div>
                                                <div class="form-check form-switch mb-3">
                                                    <input class="form-check-input" type="checkbox"
                                                        id="flexSwitchCheckDefault">
                                                    <label class="form-check-label" for="flexSwitchCheckDefault">Env√≠o
                                                        incluido</label>
                                                </div>
                                                <button type="submit" class="btn btn-primary"><i class="bi bi-cart"></i>
                                                    Agregar al carrito </button>
                                                <button type="submit" class="btn btn-success w-20"><i
                                                        class="bi bi-whatsapp"></i> Contactarse </button>
                                            </form>
        </div>
    </div>
</div>