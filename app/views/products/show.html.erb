<div class="container mt-3">
    <div class="row">
        <div class="col-7">
            <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0"
                        class="active" aria-current="true" aria-label="Slide 1"></button>
                    <% @product.images.length.times do |index| %>
                        <button type="button" data-bs-target="#carouselExampleIndicators"
                            data-bs-slide-to="<%=index+1%>" aria-label="Slide <%=index%>"></button>
                        <%end%>
                </div>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <%if @product.image.attached? %>
                            <%=image_tag @product.image, class:"d-block w-100" %>
                                <%else%>
                                    <img src="https://cdn.pixabay.com/photo/2016/11/19/18/06/feet-1840619_1280.jpg"
                                        alt="..." class="d-block w-100">
                                    <%end%>
                    </div>
                    <%if @product.images.attached? %>
                        <% @product.images.each do |item| %>
                            <div class="carousel-item">
                                <%=image_tag item, class:"d-block w-100" %>
                            </div>
                            <%end%>
                                <%end%>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"
                    data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"
                    data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
        <div class="col">
            <h1 class="display-3 font-weight-bold">
                <%=@product.name %>
            </h1>
            <p class="h4 fw-normal text-muted">
                <%= @product.description %>
            </p>
            <% if(@product.sale_price) %>
                <p class="h2 text-decoration-line-through fw-normal">Precio Original: $<%= @product.price %> </span>
                        <p class="h2 fw-normal">Oferta: <span class="text-danger">$<%= @product.sale_price %></span>
                            <%else %>
                                <p class="h2 fw-normal">Precio: $<%= @product.price %> </span>
                                        <%end %>
                                            <p class="h2 fw-normal">Stock: <%= @product.quantity %>
                                            </p>
                                            <%= form_with model: @order_product, url: add_to_cart_orders_path,
                                                remote:false do |form| %>
                                                <div class="mb-3">
                                                    <%=form.label :quantity, "Cantidad" %>
                                                        <%=form.number_field :quantity, placeholder:"1",
                                                            class:"form-control", min:1 %>
                                                        <%=form.hidden_field :product_id, value:@product.id,
                                                            class:"form-control" %>
                                                        <%=form.hidden_field :unit_price, value:@product.sale_price || @product.price,
                                                            class:"form-control"%>                                                            
                                                </div>
                                                <div class="form-check form-switch mb-3">
                                                    <input class="form-check-input" type="checkbox"
                                                        id="flexSwitchCheckDefault">
                                                    <label class="form-check-label" for="flexSwitchCheckDefault">Env√≠o
                                                        incluido</label>
                                                </div>
                                                <button type="submit" class="btn btn-primary"><i class="bi bi-cart"></i>
                                                    Agregar al carrito </button>
                                                <%# <button type="submit" class="btn btn-success w-20"><i
                                                        class="bi bi-whatsapp"></i> Contactarse </button> %>
                                                <%end%>
        </div>
    </div>
</div>